<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="dashboard4RowModel" type="com.application.app.modules.dashboard.data.model.Dashboard4RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius">
        <ImageView android:gravity="center" android:id="@+id/image"
            android:layout_gravity="center"
            android:layout_height="@dimen/_133pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="@dimen/_133pxh"
            android:scaleType="centerCrop"
            cornerRadius="@{@dimen/_5pxh}"
            imageRes="@{@drawable/img_image_product}" tools:src="@drawable/img_image_product"/>
        <LinearLayout android:gravity="center" android:id="@+id/linear1"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:gravity="center"
                android:id="@+id/linear2"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:gravity="center"
                    android:id="@+id/txtNikeAirMax27"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{dashboard4RowModel.txtNikeAirMax27}"
                    style="@style/txtPoppinsbold12_2" tools:text="@string/msg_nike_air_max_27"/>
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_65pxh"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/blue_50"
                    android:progressTint="@color/yellow_700"
                    android:rating="4" style="@style/Widget.AppCompat.RatingBar.Small"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linear3"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:gravity="top|start"
                    android:id="@+id/txt29943"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@{dashboard4RowModel.txt29943}"
                    style="@style/txtPoppinsbold12" tools:text="@string/lbl_299_43"/>
                <LinearLayout android:gravity="center"
                    android:id="@+id/linear4"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <TextView android:gravity="top|start"
                        android:id="@+id/txt53433"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@{dashboard4RowModel.txt53433}"
                        style="@style/txtPoppinsregular10" tools:text="@string/lbl_534_33"/>
                    <TextView android:gravity="top|start"
                        android:id="@+id/txt24Off"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@{dashboard4RowModel.txt24Off}"
                        style="@style/txtPoppinsbold10" tools:text="@string/lbl_24_off"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
