<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="reviewProduct1RowModel" type="com.application.app.modules.reviewproduct.data.model.ReviewProduct1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <FrameLayout android:id="@+id/frame"
            android:layout_gravity="start"
            android:layout_height="wrap_content" android:layout_width="match_parent">
            <LinearLayout android:gravity="center"
                android:id="@+id/linear1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_48pxv"
                    android:layout_width="@dimen/_48pxh"
                    android:scaleType="centerCrop" circular="@{true}"
                    imageRes="@{@drawable/img_profile_picture_1}" tools:src="@drawable/img_profile_picture_1"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtJamesLawson"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_24pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:text="@{reviewProduct1RowModel.txtJamesLawson}"
                    style="@style/txtPoppinsbold14_2" tools:text="@string/lbl_james_lawson"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_width="wrap_content" android:numStars="5"
                android:progressTint="@color/yellow_700"
                android:rating="5" style="@style/Widget.AppCompat.RatingBar.Small"/>
        </FrameLayout>
        <TextView android:gravity="top|start"
            android:id="@+id/txtAirMaxAreAlw"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:text="@{reviewProduct1RowModel.txtAirMaxAreAlw}"
            style="@style/txtPoppinsregular12" tools:text="@string/msg_air_max_are_alw"/>
        <TextView android:gravity="top|start"
            android:id="@+id/txtDecember1020"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:text="@{reviewProduct1RowModel.txtDecember1020}"
            style="@style/txtPoppinsregular10" tools:text="@string/msg_december_10_20"/>
    </LinearLayout>
</layout>
