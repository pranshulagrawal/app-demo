<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="profile1RowModel" type="com.application.app.modules.profile.data.model.Profile1RowModel"/>
    </data>
    <LinearLayout android:clickable="true" android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linear1"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/image"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_24pxv"
                android:layout_width="@dimen/_24pxh"
                android:scaleType="fitXY" android:src="@drawable/img_gender_icon"/>
            <TextView android:gravity="top|start"
                android:id="@+id/txtGender"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_weight="0.6" android:layout_width="0dp"
                android:text="@{profile1RowModel.txtGender}"
                style="@style/txtPoppinsbold12_2" tools:text="@string/lbl_gender"/>
            <TextView android:gravity="top|end"
                android:id="@+id/txtMale"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_184pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.4" android:layout_width="0dp"
                android:text="@{profile1RowModel.txtMale}"
                style="@style/txtPoppinsregular12" tools:text="@string/lbl_male"/>
            <ImageView android:id="@+id/image1"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_24pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_width="@dimen/_24pxh"
                android:scaleType="fitXY" android:src="@drawable/img_right_icon"/>
        </LinearLayout>
    </LinearLayout>
</layout>
