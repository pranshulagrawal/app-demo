<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="offerScreenVM" type="com.application.app.modules.offerscreen.data.viewmodel.OfferScreenVM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_38pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_left_icon"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtSuperFlashSal2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:text="@{offerScreenVM.offerScreenModel.txtSuperFlashSal2}"
                    style="@style/txtPoppinsbold16" tools:text="@string/msg_super_flash_sal2"/>
                <ImageView android:clickable="true"
                    android:id="@+id/image1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_141pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_search_icon_1"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linear2"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_51pxv"
                android:layout_marginTop="@dimen/_44pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout android:id="@+id/frame"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh" android:layout_width="match_parent">
                    <ImageView android:id="@+id/image2"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_206pxv"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        cornerRadius="@{@dimen/_5pxh}"
                        imageRes="@{@drawable/img_promotion_image_1}" tools:src="@drawable/img_promotion_image_1"/>
                    <LinearLayout android:id="@+id/linear3"
                        android:layout_gravity="center|start"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_32pxv"
                        android:layout_marginEnd="@dimen/_110pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_32pxv"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <TextView android:gravity="center"
                            android:id="@+id/txtSuperFlashSal"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@{offerScreenVM.offerScreenModel.txtSuperFlashSal}"
                            style="@style/txtPoppinsbold24" tools:text="@string/msg_super_flash_sal"/>
                        <LinearLayout android:gravity="center"
                            android:id="@+id/linear4"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_29pxv"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatButton
                                android:gravity="center"
                                android:id="@+id/btn08"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_41pxv"
                                android:layout_width="@dimen/_42pxh"
                                android:text="@string/lbl_08"
                                android:textAllCaps="false"
                                style="@style/btnSolidRounded_1" tools:text="@string/lbl_08"/>
                            <TextView android:gravity="top|center"
                                android:id="@+id/txtLbl"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10pxv"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_marginTop="@dimen/_10pxv"
                                android:layout_weight="0.1"
                                android:layout_width="0dp"
                                android:text="@{offerScreenVM.offerScreenModel.txtLbl}"
                                style="@style/txtPoppinsbold14_1" tools:text="@string/lbl"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:gravity="center"
                                android:id="@+id/btn34"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_41pxv"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_width="@dimen/_42pxh"
                                android:text="@string/lbl_34"
                                android:textAllCaps="false"
                                style="@style/btnSolidRounded_1" tools:text="@string/lbl_34"/>
                            <TextView android:gravity="center"
                                android:id="@+id/txtLbl1"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10pxv"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_marginTop="@dimen/_10pxv"
                                android:layout_weight="0.1"
                                android:layout_width="0dp"
                                android:text="@{offerScreenVM.offerScreenModel.txtLbl1}"
                                style="@style/txtPoppinsbold14_1" tools:text="@string/lbl"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:gravity="center"
                                android:id="@+id/btn52"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_41pxv"
                                android:layout_marginEnd="@dimen/_59pxh"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_width="@dimen/_42pxh"
                                android:text="@string/lbl_52"
                                android:textAllCaps="false"
                                style="@style/btnSolidRounded_1" tools:text="@string/lbl_52"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2" itemSpace="@{@dimen/_13pxh}"
                    tools:itemCount="4" tools:listitem="@layout/row_offer_screen1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
